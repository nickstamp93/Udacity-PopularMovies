<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/review_card_margin"
    app:contentPadding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvReviewContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:textSize="@dimen/review_text_size"
            android:textStyle="italic"
            tools:text="@string/plot_synopsis_placeholder" />

        <TextView
            android:id="@+id/tvReviewAuthor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:gravity="end"
            android:textColor="?android:textColorPrimary"
            android:textSize="@dimen/review_author_text_size"
            android:textStyle="bold"
            tools:text="author" />

    </LinearLayout>

</android.support.v7.widget.CardView>